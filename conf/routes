# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                          controllers.Application.index
GET         /callback                                  controllers.Callback.callback(code: Option[String], state: Option[String])
GET         /user                                      controllers.User.index
GET         /logout                                    controllers.Application.logout

GET         /list                                      controllers.Inbox.list(page: Int ?= 1, size: Int ?= 10)

GET         /system/messages                           controllers.nonmember.page.PublicPage.messages

# API
POST        /api/event/:eventId/:reactionTypeId        controllers.api.EventApi.toggleResponse(eventId: Long, reactionTypeId: Long)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                              controllers.Assets.at(path="/public", file)
